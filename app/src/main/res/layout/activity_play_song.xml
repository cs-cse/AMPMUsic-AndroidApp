<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlaySong"
        android:background="@drawable/bgimage">

    <TextView
            android:text="@string/textView"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:fadingEdge="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="24sp" android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/seekBar"
            android:background="#00FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"/>
    <SeekBar
            android:layout_width="312dp"
            android:layout_height="28dp" android:id="@+id/seekBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="312dp"
            android:layout_height="106dp"
            android:id="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/seekBar"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/previous" android:id="@+id/previous"
                android:layout_weight="1" android:contentDescription="@string/todo"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/pause" android:id="@+id/play"
                android:layout_weight="1" android:contentDescription="@string/controls"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/next" android:id="@+id/next"
                android:layout_weight="1" android:contentDescription="@string/todo"/>
    </LinearLayout>
    <ImageView
            android:layout_width="259dp"
            android:layout_height="181dp" app:srcCompat="@drawable/ampimage" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="44dp"
            app:layout_constraintHorizontal_bias="0.322" android:contentDescription="@string/imagemusic"/>
</androidx.constraintlayout.widget.ConstraintLayout>